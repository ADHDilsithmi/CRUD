@model CRUDPROJECT_1.Models.UpdateEmployeeModel
@{
}

<h1>Edit Employee</h1>


<form method="post" action="View" >

    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" id="employeeId" asp-for="Id" readonly >
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" id="employeeName" asp-for="Name" required>
        <div class="invalid-feedback">
            Please enter a name.
        </div>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Email</label>
        <input type="email" class="form-control" id="employeeEmail" asp-for="Email" required>
        <div class="invalid-feedback">
            Please enter valid email.
        </div>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Salary</label>
        <input type="number" class="form-control" id="employeeSalary" asp-for="Salary" min="0" required>
        <div class="invalid-feedback">
            Please enter valid positive number.
        </div>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" id="employeeDOB" asp-for="DateOfBirth" required>
        <div class="invalid-feedback">
            Please enter date of birth.
        </div>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" id="employeeDept" asp-for="Department" required>
        <div class="invalid-feedback">
            Please enter a department.
        </div>
    </div>

    <button type="submit" class="btn btn-primary" >Submit</button>
    
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Employees" >Delete</button>

</form>

